 using System;



class MainClass {

    public static void Main(string[] args) {

        Console.WriteLine("Please enter a value in pounds (lbs): ");

        double lbs = Convert.ToDouble(Console.ReadLine());

        double kg = lbs * 0.45359237;

        Console.WriteLine($"The value in kilograms (kg) is: {kg}");



        Console.WriteLine("Please enter a value in miles (mi): ");

        double mi = Convert.ToDouble(Console.ReadLine());

        double km2 = mi * 1.60934;

        Console.WriteLine($"The value in kilometers (km) is: {km2}");



        Console.WriteLine("Please enter a value in Fahrenheit (°F): ");

        double f = Convert.ToDouble(Console.ReadLine());

        double c = (f - 32) * 5 / 9;

        Console.WriteLine($"The value in Celsius (°C) is: {c}");



        double totalAge = 0;

        Console.WriteLine("Please enter 10 values for age of students: ");

        for (int i = 0; i < 10; i++) {

            int age = Convert.ToInt32(Console.ReadLine());

            totalAge += age;

        }

        double averageAge = totalAge / 10;

        Console.WriteLine($"The average age of the students is: {averageAge}");



        string fantasyStory = "In the kingdom of Alderan, there was a legendary knight named Sir Balor, who wielded a powerful sword called Flameshadow. ";

        fantasyStory += "He protected the kingdom from the clutches of the dark lord, Sauron, and his evil minions, including the sinister sorcerer, Lord Thane. ";

        fantasyStory += "The valiant knight and his loyal steed, Gryff, embarked on countless quests, battling against great odds. ";

        fantasyStory += "Their heroic deeds and selfless acts were remembered for generations, inspiring countless future champions. ";

        Console.WriteLine(fantasyStory);

    }

}
